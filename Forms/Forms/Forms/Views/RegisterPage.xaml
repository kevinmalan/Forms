<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Forms.Views.RegisterPage">
    
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="First Name" />
        <Entry Text="{Binding FirstName}" />

        <Label Text="Last Name" />
        <Entry Text="{Binding LastName}" />

        <Label Text="ID / Passport" />
        <Entry Text="{Binding IDPassport}" Keyboard="Numeric" />

        <Label Text="Photo" />
        <Button Text="Use Camera" Command="{Binding TakePhotoCommand}" />
        <Button Text="Upload from Storage" Command="{Binding UploadPhotoCommand}" />
        <Button Text="Next" Command="{Binding SubmitPersonalInfo}" />
    </StackLayout>
    
</ContentPage>