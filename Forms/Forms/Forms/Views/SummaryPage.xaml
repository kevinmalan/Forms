<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Forms.Views.SummaryPage">
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Summary" />
        <Label Text="{Binding FirstName}" Style="{StaticResource Header}"/>
        <Label Text="{Binding LastName}" TextColor="{StaticResource SecondayColor}"/>
        <Label Text="{Binding IDPassport}" />
        <Label Text="{Binding DateOfBirth} "/>
        <Label Text="{Binding Address}" />
        <Image Source="{Binding ProfileImageSource}" />
        <Button Text="Register" Command="{Binding Register}" />
    </StackLayout>
</ContentPage>